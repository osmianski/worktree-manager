#!/usr/bin/env php
<?php

require __DIR__ . '/../vendor/autoload.php';

$app = new \Osmianski\WorktreeManager\Application('Worktree Manager', '0.1.0');
$app->add(new \Osmianski\WorktreeManager\NewCommand());
$app->add(new \Osmianski\WorktreeManager\ListCommand());
$app->add(new \Osmianski\WorktreeManager\RemoveCommand());
$app->add(new \Osmianski\WorktreeManager\RootAddCommand());
$app->add(new \Osmianski\WorktreeManager\RootRemoveCommand());
$app->add(new \Osmianski\WorktreeManager\RootListCommand());
$app->run();

#!/usr/bin/env php
<?php

require __DIR__ . '/../vendor/autoload.php';

use Osmianski\WorktreeManager\ListCommand;
use Osmianski\WorktreeManager\NewCommand;
use Osmianski\WorktreeManager\RemoveCommand;
use Symfony\Component\Console\Application;

$app = new Application('Worktree Manager', '0.1.0');
$app->add(new NewCommand());
$app->add(new ListCommand());
$app->add(new RemoveCommand());
$app->run();
